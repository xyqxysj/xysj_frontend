/**index.wxss**/

page {
  background: #f8f9f9;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.head {
  height: 300rpx;
  width: 90%;
}

.userinfo {
  height: 100%;
  width: 100%;
  border: 1rpx solid #686871;
  border-radius: 20rpx;
  background-color: #aebfbf;
}

.userinfo .photo {
  text-align: center;
  margin-left: 50px;
}

.photo-url {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  display: inline-block;
}

.login {
  width: 100%;
  text-align: center;
}

.loginbtn {
   font-size: small;
}

.login-view  {
  margin-top: 20rpx;
}

.user-detail {
  text-align: center;
  width: 100%;
}

.user-detail .username  {
  margin-top: 20rpx;
}

.body {
  padding-top: 50rpx;
  width: 100%;
  height: 500rpx;
  /* padding-left: 5%; */
}

.index-menu  {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #c7c7cc;
  /* display: table; */
}

.author {
  border-top: 1rpx solid #c7c7cc;
}

.menu-info {
  width: 100%;
  height: 100%;
  /* display: table-cell; */
  vertical-align: middle;
  padding: 20rpx 0;
}

.menu-hover  {
  background-color: #efecec;
  border-radius: 20rpx;
}

.menu-icon  {
  height: 50rpx;
  width: 50rpx;
  margin-top: 7rpx;
  margin-left: 10rpx;
  display: inline-block;
}

.arrow-icon {
  height: 70rpx;
  width: 70rpx;
  position: absolute;
  right: 60rpx;
}

.menu-text {
  font-size: 30rpx;
  display: inline-block;
  margin-left: 30rpx;
  margin-top: 13rpx;
  position: absolute;
}


.shard {
  position: relative;
}

.shardbtnview {
  width:100%;
  height:100%;
  z-index:10000;
  position:absolute;
  top:-2rpx;
}

.sharebtn {
  width:100%; 
  height:100rpx;  
  text-align: center;
  line-height: 38px; 
  /* background-color: #000000; */
  background-color: transparent;   /* 按钮透明   */
  border:none;		
  /* display:table-cell; */
}

.sharebtn::after{
  border:none；
}
